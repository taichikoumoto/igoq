<h1>端末一覧</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_tag(import_phones_path, :method => :post, multipart: true) do %>
      <div class="form-group">
        <%= file_field_tag :csv_file %>
      </div>
      <%= submit_tag "CSVインポート", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.number %></td>
        <td><%= phone.company %></td>
        <td><%= phone.price %></td>
        <td><%= phone.user %></td>
        <td><%= link_to '詳細', phone %></td>
        <td><%= link_to '編集', edit_phone_path(phone) %></td>
        <td><%= link_to '削除', phone, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

